<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DPActivity">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/line"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c0"
                    android:visibility="gone"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/header0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="header0" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv0"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c2"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/header2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="header2"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c4"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                   >
                    <TextView
                        android:id="@+id/header4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="header4"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c6"
                    android:visibility="gone"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/header6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="header4"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />


                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:background="#00bdbdbd"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>


            <LinearLayout
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c1"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/header1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="header1"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c3"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                   >
                    <TextView
                        android:id="@+id/header3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="header3"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c5"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/header5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="header5"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_rv_width"
                    android:orientation="vertical"
                    android:id="@+id/c7"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/header7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="#000"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="header5"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        />


                </LinearLayout>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


    <ImageView
        android:id="@+id/settingBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:src="@drawable/edit_mode_settings_normal"
        />


    <com.liaobusi.stockman.ui.VerticalSeekBar
        android:id="@+id/seekBar"
        android:progress="50"
        android:layout_width="wrap_content"
        android:max="100"
        android:progressDrawable="@drawable/vertical_progress"
        android:thumb="@drawable/vertical_thumb"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="@+id/settingBtn"
        app:layout_constraintEnd_toEndOf="@+id/settingBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
       />

</androidx.constraintlayout.widget.ConstraintLayout>