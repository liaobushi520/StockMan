<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:minHeight="500dp"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingVertical="8dp"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="排序方式"
         android:background="#000"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨幅" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/zfSortCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffbd2c2c"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东热" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/popularitySortCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffbd2c2c"
            android:checked="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同热" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/thsPopularitySortCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffbd2c2c"
            android:checked="false" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大热" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/dzhPopularitySortCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffbd2c2c"
            android:checked="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活跃度" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/activityLevelCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffbd2c2c"
            android:checked="false" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingVertical="8dp"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="均线"
        android:background="#000"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五日线" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/line5Cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffbd2c2c"
            android:checked="false" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10日线" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/line10Cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffbd2c2c"
            android:checked="false" />




    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:text="板块列表"
        android:paddingStart="8dp"
        android:paddingVertical="8dp"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff4081"
            android:text="取消"
            android:textColor="#fff" />

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3f51b5"
            android:text="确定"
            android:textColor="#fff" />


    </LinearLayout>







</LinearLayout>