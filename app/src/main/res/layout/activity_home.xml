<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#eebd2c2c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >



        <TextView
            android:id="@+id/fpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/analysisBtn"
            app:layout_constraintBottom_toBottomOf="@+id/analysisBtn"
            app:layout_constraintRight_toLeftOf="@+id/analysisBtn"
            android:text="韭研公社"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/analysisBtn"
            android:layout_width="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_deng"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#f003ff"
                android:text="盯盘"
                android:textColor="#fff" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#ff4081"
                android:layout_marginTop="20dp"
                android:text="复盘"
                android:textColor="#fff" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/s7"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#f00ff0"
                android:text="板块强势"
                android:textColor="#fff" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/s4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#ff0000"
                android:text="均线强势"
                android:textColor="#fff" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/s1"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="#ff4081"
                android:text="策略一(涨停洗盘)"
                android:textColor="#fff" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/s2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#3f51b5"
                android:text="策略二(涨停揉搓)"
                android:textColor="#fff" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/s3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#30f1bf"
                android:text="策略四"
                android:textColor="#fff" />




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/s6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#f08f00"
                    android:text="超跌底部横盘"
                    android:textColor="#fff" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/s5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#f00ff0"
                    android:text="活跃度"
                    android:textColor="#fff" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/s8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#000f11"
                    android:text="涨停强势"
                    android:textColor="#fff" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/s9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#ff0f11"
                    android:text="底部起爆堆量"
                    android:textColor="#fff" />

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77000000"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="请勿退出app"
                android:textColor="#fff"
                android:textSize="20sp" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/initBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#3f51b5"
            android:text="初始化"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />



        <FrameLayout
            android:layout_width="match_parent"
            android:background="#99000000"
            android:id="@+id/passwordFL"
            android:clickable="true"
            android:visibility="gone"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginHorizontal="64dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    />

                <EditText
                    android:id="@+id/passwordEt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/passwordBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff0090"
                    android:layout_marginStart="16dp"
                    android:textColor="#fff"
                    android:text="确定"
                    />


            </LinearLayout>

        </FrameLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

