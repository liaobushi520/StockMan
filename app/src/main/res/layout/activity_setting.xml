<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">


   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_marginHorizontal="16dp"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="显示隐藏个股/板块"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.AppCompatCheckBox
                   android:id="@+id/hideSwitch"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="显示ST"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.AppCompatCheckBox
                   android:id="@+id/showSTSwitch"
                   android:checked="false"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="定时刷新"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/autoRefresh"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="显示连扳数标签"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/showLianbanCount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="显示当前涨跌幅"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/showCurrentChg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="显示后一天涨跌幅"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/showNextChg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="修复数据日期 "
                   />
               <EditText
                   android:id="@+id/fixedDateEt"
                   android:layout_width="100dp"
                   android:text="20230908"
                   android:inputType="date"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="-"
                   />

               <EditText
                   android:id="@+id/fixedDate2Et"
                   android:layout_width="100dp"
                   android:text="20230908"
                   android:inputType="date"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/fixDataBtn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="确定"
                   />


           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="多少天后显示涨停标志"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/howDayShowZTFlagEt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>


               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/howDayShowZTFlagConfirmBtn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="确定"
                   />

           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="8dp"
               android:layout_height="wrap_content">

               <EditText
                   android:id="@+id/fpEt"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:background="#000"
                   android:textColor="#fff"
                   android:textSize="16sp"
                   android:textColorHint="#888"
                   android:hint="输入json数据"
                   android:layout_height="100dp"/>

               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/jiexiBtn"
                   android:layout_width="wrap_content"
                   android:text="解析"
                   android:layout_height="wrap_content"/>

           </LinearLayout>



       </LinearLayout>
   </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>