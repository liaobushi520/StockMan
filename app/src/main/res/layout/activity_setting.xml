<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#eebd2c2c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".SettingActivity">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示隐藏个股/板块" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/hideSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示ST" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/showSTSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定时刷新" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/autoRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实时数据来源(东方财富/百度)" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/realTimeSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示连板数标签" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/showLianbanCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示当前涨跌幅" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/showCurrentChg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聚焦连板" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/focusLB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复盘源（同花顺/韭研公社）" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/fpSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="追踪异动方式" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/trackingType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示后一天涨跌幅" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/showNextChg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活跃度参考人气指数" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/activeRateWithPopularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修复数据日期 " />

                    <EditText
                        android:id="@+id/fixedDateEt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:text="20230908" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <EditText
                        android:id="@+id/fixedDate2Et"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:text="20230908" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/fixDataBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确定" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="多少天后显示涨停标志" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/howDayShowZTFlagEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/howDayShowZTFlagConfirmBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确定" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/bksEt"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:hint="输入板块"
                        android:textColor="#fff"
                        android:textColorHint="#888"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/bkNameEt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:hint="输入名称"
                        android:textColorHint="#888"
                        android:textSize="16sp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bksOkBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确定" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fpEt"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:hint="输入json数据"
                        android:textColor="#fff"
                        android:textColorHint="#888"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/jiexiBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="解析" />

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>





