<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Strategy1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上市时间" />

                <EditText
                    android:id="@+id/startMarketTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:inputType="number"
                    android:text="19900102"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="10dp"
                    android:background="#000000"
                    android:layout_height="2dp"/>

                <EditText
                    android:id="@+id/endMarketTime"
                    android:layout_width="0dp"
                    android:text="20180102"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="流通市值(亿)" />


                <EditText
                    android:id="@+id/lowMarketValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="10"
                    android:inputType="number"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="10dp"
                    android:background="#000000"
                    android:layout_height="2dp"/>

                <EditText
                    android:id="@+id/highMarketValue"
                    android:layout_width="0dp"
                    android:text="300"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ztRangeTv"
                    android:layout_width="wrap_content"
                    android:text="100"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天内有首板涨停,涨停后调整时间至少" />


                <EditText
                    android:id="@+id/ztAdjustTimeTv"
                    android:layout_width="wrap_content"
                    android:text="5"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="天"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调整期间区间涨跌幅(基于涨停收盘价)" />

                <EditText
                    android:id="@+id/afterZTStockPriceLowRateTv"
                    android:layout_width="wrap_content"
                    android:text="-20"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="%"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="10dp"
                    android:background="#000000"
                    android:layout_height="2dp"/>


                <EditText
                    android:id="@+id/afterZTStockPriceHighRateTv"
                    android:layout_width="wrap_content"
                    android:text="15"
                    android:inputType="number"
                    android:paddingEnd="10dp"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="%"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调整期间区间振幅(基于涨停收盘价)" />

                <EditText
                    android:id="@+id/amplitudeAfterZTTv"
                    android:layout_width="wrap_content"
                    android:text="30"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="%"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:textColor="#ff4081"
                android:text="*涨停之后振幅小一般是控盘洗盘的表现"
                android:layout_height="wrap_content"/>

           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="调整期间创涨停前" />

            <EditText
                android:id="@+id/newHighestRangeBeforeZTTv"
                android:text="60"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天新高" />


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近一次涨停前,涨停次数少于或等于" />

                <EditText
                    android:id="@+id/allowedZTBeforeZTTv"
                    android:text="6"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间" />

                <EditText
                    android:id="@+id/endTimeTv"
                    android:text="20220803"
                    android:inputType="date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="概念板块" />

                <EditText
                    android:id="@+id/conceptAndBKTv"
                    android:text="ALL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创业板" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/changyebanCb"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="牛回头" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cowBackCb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抗跌" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/kdCb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="股东人数连续" />

                <EditText
                    android:id="@+id/gdrsCountTv"
                    android:text="5"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期下降" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/gdrsCb"
                    android:checked="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chooseStockBtn"
                android:layout_width="match_parent"
                android:background="#3f51b5"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:text="选    股"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/strictStockBtn"
                    android:layout_width="0dp"
                    android:background="#3f51b5"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="窄幅横盘"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/midStockBtn"
                    android:layout_width="0dp"
                    android:background="#206980"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="涨停内宽幅"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/softStockBtn"
                    android:layout_width="0dp"
                    android:background="#ff4081"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="涨停上宽幅"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:id="@+id/resultCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:text="选股结果" />

            <LinearLayout
                android:id="@+id/resultLL"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/resultTv"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:minHeight="40dp"-->
<!--                android:textSize="18sp" />-->


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>